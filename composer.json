{
  "name": "ivoschimani/lazyload-bundle",
  "description": "Adds lazy loading functionality to Contao",
  "keywords": [
    "contao",
    "lazyload"
  ],
  "type": "contao-bundle",
  "license": "LGPL-3.0+",
  "authors": [
    {
      "name": "Ivo Schimani",
      "email": "ivo@schimani.de",
      "role": "Project leader"
    }
  ],
  "require": {
    "php": "^8.1",
    "contao/core-bundle": ">=4.9 || >=5.3"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0"
  },
  "conflict": {
    "contao/core": "*",
    "contao/manager-plugin": "<2.0 || >=3.0"
  },
  "autoload": {
    "psr-4": {
      "Ivo\\LazyloadBundle\\": "src/"
    },
    "classmap": [
      "src/Resources/contao/"
    ]
  },
  "extra": {
    "contao-manager-plugin": "Ivo\\LazyloadBundle\\ContaoManager\\Plugin"
  }
}